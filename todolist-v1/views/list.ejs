
<%-include("header")-%>
      <div class="box heading">
        <h1><%=kindOfDay%>!</h1>
      </div>
      <div class="box">

        <%  listItem.forEach((item)=>{%>

            <form  action="/delete" method="post">
              <div class="item">
                <input type="checkbox" name="checkbox" value="<%=item._id%>" onchange="this.form.submit()">
                <input type="hidden" name="listName" value="<%=kindOfDay%>">
                <p class="item">
                  <%=item.name%>
                </p>
              </div>

            </form>
          <%})%>


          <form class="item" action="/" method="post">
            <input type="text" name="newItem" value="" placeholder="Add new Item" autocomplete="off">
            <button type="submit" value="<%=kindOfDay%>" name="button">+</button>
          </form>
      </div>
<%-include("footer")-%>
